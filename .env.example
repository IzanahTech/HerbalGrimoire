# Environment variables template - copy this to .env.local and fill in your values
# This file can be committed to git

# Database connection
# For local development, use SQLite:
DATABASE_URL="file:./dev.db"
# For production, use PostgreSQL:
# DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Base URL for the application
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Node environment
NODE_ENV="development"

# Admin password for the admin panel
ADMIN_PASSWORD="your-secure-password-here"

# Blob storage token for file uploads
BLOB_READ_WRITE_TOKEN="your-blob-token-here"

# Neon Auth environment variables (if using Neon Auth)
NEXT_PUBLIC_STACK_PROJECT_ID="your-project-id"
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY="your-publishable-key"
STACK_SECRET_SERVER_KEY="your-secret-key"
